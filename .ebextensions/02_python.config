container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python FDTD_django/manage.py migrate --noinput"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python FDTD_django/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "FDTD_django.settings"
    "PYTHONPATH": "/opt/python/current/app/FDTD_django:$PYTHONPATH"
    "ALLOWED_HOSTS": ".elasticbeanstalk.com"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: FDTD_django/FDTD_django/wsgi.py
    NumProcesses: 1
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/static/"